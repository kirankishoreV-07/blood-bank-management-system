{
  "expo": {
    "name": "BloodBank+",
    "slug": "blood-bank-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#dc2626"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bloodbank.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to capture verification photos for blood donation records.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select verification photos for blood donation records.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "10.46.61.122": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0"
            },
            "10.12.87.10": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0"
            },
            "192.168.29.212": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0"
            },
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0"
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#dc2626"
      },
      "package": "com.bloodbank.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "usesCleartextTraffic": true,
      "networkSecurityConfig": {
        "domain-config": [
          {
            "domain": "10.46.61.122",
            "cleartextTrafficPermitted": true
          },
          {
            "domain": "10.12.87.10",
            "cleartextTrafficPermitted": true
          },
          {
            "domain": "192.168.29.212", 
            "cleartextTrafficPermitted": true
          },
          {
            "domain": "localhost",
            "cleartextTrafficPermitted": true
          },
          {
            "domain": "127.0.0.1",
            "cleartextTrafficPermitted": true
          }
        ]
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "blood-bank-app"
  }
}
